<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="group_portal_user_restricted" model="res.groups">
        <field name="name">User Portal Restricted</field>
        <field name="category_id" ref="base.module_category_user_type"/>
    </record>

    <record id="website_sale_all_products_group" model="res.groups">
        <field name="name">Website-sales all products</field>
        <field name="users" eval="[(4, ref('base.public_user'))]" />
    </record>

    <record id="website_sale_all_products" model="ir.rule">
        <field name="name">website sale all products</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="domain_force">[('website_published', '=', True), ("sale_ok", "=", True)]</field>
        <field name="groups" eval="[(4, ref('website_sale_restricted_product.website_sale_all_products_group'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Hay que sobreescribir a mano, tiene noupdate='1'
