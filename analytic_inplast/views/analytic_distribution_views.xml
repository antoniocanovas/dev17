<?xml version="1.0"?>
<odoo>

    <!-- WINDOW ACTION: -->
    <record model="ir.actions.act_window" id="inplast_analytic_distribution_action_window" >
        <field name="name">inplast_analytic.distribution.action.window</field>
        <field name="type">ir.actions.act_window</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="domain" eval="False"/>
        <field name="filter" eval="False"/>
        <field name="limit">80</field>
        <field name="res_model">analytic.distribution</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" eval="False"/>
        <field name="target">current</field>
    </record>

    <!-- MENU: -->
    <record id="inplast_analytic_distribution_menu" model="ir.ui.menu">
        <field name="action" ref="inplast_analytic_distribution_action_window"/>
        <field name="active" eval="True"/>
        <field name="name">Analytic distribution</field>
        <field name="parent_id" ref="account.menu_finance_entries_management"/>
        <field name="sequence">50</field>
        <field name="web_icon" eval="False"/>
    </record>

    <!-- FORM VIEW: -->
    <record id="analytic_distribution_default_form" model="ir.ui.view">
        <field name="name">analytic.distribution.default.form</field>
        <field name="model">analytic.distribution</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name" placeholder="Analytic distribution name ..."/>
                    </h1>
                    <group>
                            <field name="income_account_ids" widget="many2many_tags"/>
                            <field name="expense_account_ids" widget="many2many_tags"/>
                            <field name="compute_method"/>
                            <field name="workcenter_ids" widget="many2many_tags"/>
                            <field name="date"/>
                            <field name="analytic_line_ids"/>
                            <field name="comment"/>
                    </group>
                </sheet>
            </form>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>

    <!-- TREE VIEW: -->
    <record id="analytic_distribution_default_tree" model="ir.ui.view">
        <field name="name">analytic.distribution.default.tree</field>
        <field name="model">analytic.distribution</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="compute_method"/>
            </tree>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>


</odoo>