<?xml version="1.0"?>
<odoo>

    <record id="payment_estimation_report_default_tree" model="ir.ui.view">
        <field name="name">payment.estimation.report.default.tree</field>
        <field name="model">payment.estimation.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="amount_residual_signed"/>
                <field name="estimate_amount"/>
                <field name="total_amount"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="payment_estimation_report_default_form" model="ir.ui.view">
        <field name="name">payment.estimation.report.default.form</field>
        <field name="model">payment.estimation.report</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Payment estimation report">
                    <h3>
                        <field name="name"/>
                    </h3>
                    <group>
                        <group>
                            <field name="to_date" required="1"/>
                            <field name="from_date"/>
                        </group>
                        <group>
                            <field name="amount_residual_signed"/>
                            <field name="estimate_amount"/>
                            <field name="total_amount"/>
                        </group>
                    </group>
                    <h3>Estimations:</h3>
                    <field name="estimation_ids"/>
                    <h3>Invoices:</h3>
                    <field name="move_ids"/>
                </sheet>
            </form>
        </field>
    </record>

</odoo>