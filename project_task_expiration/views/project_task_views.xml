<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <!-- Task customization : -->
    <record id="project_task_expiration_inh_form" model="ir.ui.view">
        <field name="name">project.task.expiration.inh.form</field>
        <field name="model">project.task</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">not allow_billable and not is_expiration</attribute>
            </xpath>
            <field name="date_last_stage_update" position="after">
                <field name="is_expiration" invisible="1"/>
            </field>
        </field>
        <field name="priority">99</field>
    </record>

</odoo>
