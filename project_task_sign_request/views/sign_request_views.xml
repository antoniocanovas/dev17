<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <!-- FORM view : -->
    <record id="project_task_sign_request_inh_form" model="ir.ui.view">
        <field name="name">project.task.sign.request.inh.form</field>
        <field name="model">sign.request</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sign.sign_request_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='template_id']" position="after">
                <field name="task_id"/>
            </xpath>

        </field>
        <field name="priority">99</field>
    </record>

    <!-- TREE view : -->
    <record id="project_task_sign_request_inh_tree" model="ir.ui.view">
        <field name="name">project.task.sign.request.inh.tree</field>
        <field name="model">sign.request</field>
        <field name="type">tree</field>
        <field name="inherit_id" ref="sign.sign_request_view_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='template_id']" position="after">
                <field name="task_id" optional="show"/>
            </xpath>

        </field>
        <field name="priority">99</field>
    </record>

    <!-- KANBAN view : -->
    <record id="project_task_sign_request_inh_kanban" model="ir.ui.view">
        <field name="name">project.task.sign.request.inh.kanban</field>
        <field name="model">sign.request</field>
        <field name="type">kanban</field>
        <field name="inherit_id" ref="sign.sign_request_view_kanban"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='reference']" position="after">
                <field name="task_id" display="full"/>
            </xpath>
        </field>
        <field name="priority">99</field>
    </record>

</odoo>