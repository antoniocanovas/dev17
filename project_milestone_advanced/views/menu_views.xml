<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- PROJECT MILESTONE ADVANCED WINDOW ACTION: -->
    <record id="action_project_milestone_advanced" model="ir.actions.act_window">
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">action</field>
        <field name="domain" eval="False"/>
        <field name="filter" eval="False"/>
        <field name="limit">80</field>
        <field name="name">Project Milestones</field>
        <field name="res_model">project.milestone</field>
        <field name="search_view_id" eval="False"/>
        <field name="target">current</field>
        <field name="type">ir.actions.act_window</field>
        <field name="usage" eval="False"/>
        <field name="view_mode">tree</field>

    </record>

    <!-- MENUS: -->
    <record id="project_milestone_advanced_menu" model="ir.ui.menu">
        <field name="action" ref="action_project_milestone_advanced"/>
        <field name="active" eval="True"/>
        <field name="name">Milestones</field>
        <field name="parent_id" ref="project.menu_main_pm"/>
        <field name="sequence">3</field>
        <field name="web_icon" eval="False"/>
    </record>

</odoo>