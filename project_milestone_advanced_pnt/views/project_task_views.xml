<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="project_milestone_advanced_task_search" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='milestone']" position="before">
                <filter string="Goal (milestone name)" name="goal" context="{'group_by': 'milestone_name'}" groups="project.group_project_milestone"/>
            </xpath>
        </field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="key" eval="False"/>
        <field name="mode">extension</field>
        <field name="model">project.task</field>
        <field name="name">project.milestone.advanced.task.search</field>
        <field name="priority">32</field>
        <field name="type">search</field>
    </record>

</odoo>

