<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    # BASE AUTOMATION:
    <record id="subscription_recurrent_task_creation_aa" model="base.automation">
        <field name="name">=> Subscription recurrent task creation</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="trigger">on_create_or_write</field>
        <field name="filter_pre_domain"></field>
        <field name="filter_domain"></field>
        <field name="active" eval="True"/>
    </record>

    # SERVER ACTION:
    <record id="subscription_recurrent_task_creation_as" model="ir.actions.server">
        <field name="name">=> AS Subscription recurrent task creation</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="evaluation_type">value</field>
        <field name="state">code</field>
        <field name="code">
            record.create_task_from_subscription()
        </field>
        <field name="base_automation_id" ref="subscription_recurrent_task.subscription_recurrent_task_creation_aa"/>
    </record>

</odoo>
