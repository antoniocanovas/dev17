<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="inplast_sale_order_inh_form" model="ir.ui.view">
        <field name="name">sale.order.azarey.inh.form</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="custom_logistic" string="Logistics">
                    <group>
                        <group>
                            <field name="logistic1_start" invisible="1"/>
                            <field name="logistic1_stop" string="First" widget="daterange" options="{'end_date_field': 'logistic1_start'}"/>
                            <field name="logistic2_start" invisible="1"/>
                            <field name="logistic2_stop" string="Second" widget="daterange" options="{'end_date_field': 'logistic2_start'}"/>
                            <field name="logistic1_start" invisible="1"/>
                            <field name="logistic3_stop" string="Third" widget="daterange" options="{'end_date_field': 'logistic3_start'}"/>
                        </group>
                        <group>
                            <field name="logistic_days"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

</odoo>
