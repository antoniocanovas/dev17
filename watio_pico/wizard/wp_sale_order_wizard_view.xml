<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="action_open_wp_sale_wizard" model="ir.actions.act_window">
        <field name="name">WPico</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wp.product.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_pnt_sale_id':active_id}</field>
    </record>


    <record id="pnt_wp_sale_order_wizard" model="ir.ui.view">
        <field name="name">WP Product Wizard</field>
        <field name="model">wp.product.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Wp Template">
                    <h2>
                        <p>WP Template</p>
                    </h2>
                    <group name="wp_template">
                        <group>
                            <field name="pnt_sale_id" invisible="1" />
                            <field name="pnt_wp_template_id" />
                        </group>
                    </group>
                    <footer>
                        <button name="process" string="print" type="object" class="oe_highlight oe_right"/>
                        <button special="cancel" string="Cancel" type="object" class="oe_right"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>


</odoo>