<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="pnt_wp_sale_order_wizard_default_form" model="ir.ui.view">
        <field name="name">WP Product Wizard Default Form</field>
        <field name="model">wp.sale.order.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Wp Template">
                    <h2>
                        <p>WP Template</p>
                    </h2>
                    <group name="wp_template">
                        <group>
                            <field name="pnt_sale_id" invisible="1" />
                            <field name="pnt_wp_template_id" />
                        </group>
                    </group>
                    <footer>
                        <button name="process" string="print" type="object" class="oe_highlight oe_right"/>
                        <button special="cancel" string="Cancel" type="object" class="oe_right"/>
                    </footer>
                </sheet>
            </form>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="mode">primary</field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>


</odoo>