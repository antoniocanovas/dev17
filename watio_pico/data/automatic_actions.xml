<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    # BASE AUTOMATION:
    <record id="ba_sale_watio_pico_template" model="base.automation">
        <field name="name">=> Update from Watio Pico template lines</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="trigger">on_change</field>
        <field name="trigger_field_ids" eval="[(6,0, [ref('watio_pico.field_sale_order__wp_template_id')])]"/>
        <field name="active" eval="True"/>
    </record>

    # SERVER ACTION:
    <record id="as_sale_watio_pico_template" model="ir.actions.server">
        <field name="name">=> AS => Update from Watio Pico template lines</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="evaluation_type">value</field>
        <field name="state">code</field>
        <field name="code">
            record.get_wp_template_lines()
        </field>
        <field name="base_automation_id" ref="watio_pico.ba_sale_watio_pico_template"/>
    </record>

</odoo>
