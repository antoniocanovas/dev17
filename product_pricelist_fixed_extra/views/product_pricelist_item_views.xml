<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="fixed_extra_pricelist_inh_view" model="ir.ui.view">
        <field name="name">fixed.extra.pricelist.inh.view</field>
        <field name="model">product.pricelist.item</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
        <field name="arch" type="xml">

            <data>
                <field name="fixed_price" position="attributes">
                    <attribute name="invisible">compute_price not in ['fixed', 'fixed_extra']</attribute>
                </field>
                <field name="price_surcharge" position="attributes">
                    <attribute name="invisible">compute_price not in ['formula', 'fixed_extra']</attribute>
                </field>
                <xpath expr="//field[@name='item_ids']/tree[2]/field[@name='currency_id']" position="before">
                    <field name="price_surcharge" optional="show"/>
                </xpath>
            </data>

        </field>
        <field name="priority">99</field>
    </record>

</odoo>
