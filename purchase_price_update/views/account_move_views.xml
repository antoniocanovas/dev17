<?xml version="1.0"?>
<odoo>

    <record id="account_invoice_supplierinfoupdate_inh_form" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/field[@name='quantity']" position="before">
                <field
                    name="price_update_mode"
                    groups="product.group_product_pricelist"
                    invisible="(move_type not in ['in_invoice', 'in_refund'])"
                />
            </xpath>
        </field>
    </record>

</odoo>